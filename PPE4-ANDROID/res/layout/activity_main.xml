<!DOCTYPE GridLayout [<!ELEMENT GridLayout (Space|ImageView|EditText|Button)*><!ATTLIST GridLayoutxmlns:android CDATA #REQUIREDxmlns:tools CDATA #REQUIREDandroid:id CDATA #REQUIREDandroid:layout_width CDATA #REQUIREDandroid:layout_height CDATA #REQUIREDandroid:columnCount CDATA #REQUIREDandroid:orientation CDATA #REQUIREDtools:context CDATA #REQUIRED><!ELEMENT Space (#PCDATA)><!ATTLIST Spaceandroid:layout_column CDATA #IMPLIEDandroid:layout_height CDATA #IMPLIEDandroid:layout_row CDATA #REQUIREDandroid:layout_width CDATA #REQUIRED><!ELEMENT ImageView (#PCDATA)><!ATTLIST ImageViewandroid:id CDATA #REQUIREDandroid:layout_width CDATA #REQUIREDandroid:layout_column CDATA #REQUIREDandroid:layout_columnSpan CDATA #REQUIREDandroid:layout_gravity CDATA #REQUIREDandroid:layout_row CDATA #REQUIREDandroid:contentDescription CDATA #REQUIREDandroid:src CDATA #REQUIRED><!ELEMENT EditText (requestFocus)*><!ATTLIST EditTextandroid:ems CDATA #REQUIREDandroid:hint CDATA #REQUIREDandroid:id CDATA #REQUIREDandroid:inputType CDATA #REQUIREDandroid:layout_column CDATA #REQUIREDandroid:layout_gravity CDATA #REQUIREDandroid:layout_row CDATA #REQUIRED><!ELEMENT requestFocus (#PCDATA)><!ELEMENT Button (#PCDATA)><!ATTLIST Buttonandroid:id CDATA #REQUIREDandroid:layout_column CDATA #REQUIREDandroid:layout_gravity CDATA #REQUIREDandroid:layout_row CDATA #REQUIREDandroid:text CDATA #REQUIRED>]>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout_Connexion"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:orientation="horizontal"
    tools:context="${relativePackage}.${activityClass}" >

    <Space
        android:layout_width="53dp"
        android:layout_height="1dp"
        android:layout_column="0"
        android:layout_row="0" />

    <Space
        android:layout_width="42dp"
        android:layout_height="1dp"
        android:layout_column="1"
        android:layout_row="0" />

    <Space
        android:layout_width="166dp"
        android:layout_height="1dp"
        android:layout_column="2"
        android:layout_row="0" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="start"
        android:layout_row="1"
        android:contentDescription="@string/Logo"
        android:src="@drawable/medical.jpg" />

    <Space
        android:layout_width="1dp"
        android:layout_height="21dp"
        android:layout_column="0"
        android:layout_row="0" />

    <EditText
        android:id="@+id/TB_Utilisateur"
        android:layout_column="1"
        android:layout_gravity="end|bottom"
        android:layout_row="2"
        android:ems="10"
        android:hint="@string/User"
        android:inputType="text" >
    	<requestFocus />
    </EditText>

    <Space
        android:layout_width="1dp"
        android:layout_height="62dp"
        android:layout_column="0"
        android:layout_row="2" />

    <EditText
        android:id="@+id/TB_Password"
        android:layout_column="1"
        android:layout_gravity="end|bottom"
        android:layout_row="3"
        android:ems="10"
        android:hint="@string/Password"
        android:inputType="textPassword" >
    </EditText>

    <Space
        android:layout_width="1dp"
        android:layout_height="64dp"
        android:layout_column="0"
        android:layout_row="3" />

    <Space
        android:layout_width="1dp"
        android:layout_height="32dp"
        android:layout_column="0"
        android:layout_row="4" />

    <Button
        android:id="@+id/button1"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_row="5"
        android:text="@string/Connect" />

    <Space
        android:layout_width="1dp"
        android:layout_height="76dp"
        android:layout_column="0"
        android:layout_row="5" />

    <Space
        android:layout_width="100dp"
        android:layout_height="77dp"
        android:layout_column="1"
        android:layout_row="6" />

    <Space
        android:layout_width="100dp"
        android:layout_row="6" />

</GridLayout>
