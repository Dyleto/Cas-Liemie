<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow

        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

    <TextView
        android:id="@+id/vueDatePrevuDeb"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dip"
        />
    </TableRow>


    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Civilité"
            android:id="@+id/vueSexe"
            android:layout_gravity="right|top"
            android:gravity="right"
            android:textSize="15dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Prénom"
            android:id="@+id/vueNom"
            android:layout_gravity="center_horizontal|top"
            android:textSize="15dp"
            android:gravity="right"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nom"
            android:id="@+id/vuePrenom"
            android:textSize="15dp"/>

    </TableRow>


    <TableRow
        android:id="@+id/tableRow5"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="18dp" android:text="telephone"  android:layout_span="3"
            android:padding="4dip"
             android:id="@+id/vueTl"
            android:gravity="center" />

    </TableRow>


    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:text="Adresse"
            android:id="@+id/vueAdresse"
            android:layout_weight="50"
            android:padding="4dip"
            android:gravity="right" />

        <TextView
            android:text="CP"
            android:id="@+id/vueCp"
            android:layout_weight="50"
            android:padding="4dip"
            android:gravity="right" />

        <TextView
            android:text="Ville"
            android:id="@+id/vueVille"
            android:layout_weight="50"
            android:padding="4dip" android:gravity="left"/>
    </TableRow>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    </LinearLayout>
</TableLayout>
</LinearLayout>